@model Core.ViewModels.UserViewModel

<div class="row">
    <div class="col-lg-2 col-md-4 col-sm-4">
        <h2>Profile</h2>
    </div>
    <div class="col-lg-10 col-md-8 col-sm-8">
        @if (@Model.RoleName == "admin")
        {
            <a class="btn btn-primary" asp-controller="Accounts" asp-action="AdminDashboard">Admin dashboard</a>
        }
        <a class="btn btn-outline-primary" asp-action="SignOut" asp-controller="Accounts">Sign out</a>
    </div>

    <div class="col-12 mt-3">
        <p>
            <strong>User email</strong>: @Model.Email
        </p>

        <p>
            <strong>User role</strong>: @Model.RoleName
        </p>
    </div>
</div>


